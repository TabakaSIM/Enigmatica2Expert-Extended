{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TconModMod Configuration",
  "description": "Schema for tconmodmod.json",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "modifier": {
        "description": "The identifier of the modifier to be changed.",
        "type": "string"
      },
      "mutations": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "colour"
                },
                "value": {
                  "type": "string",
                  "pattern": "^[0-9a-fA-F]{6}$"
                }
              },
              "required": ["type", "value"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "per_level"
                },
                "value": {
                  "type": "integer"
                }
              },
              "required": ["type", "value"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "material"
                },
                "value": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "const": "item"
                          },
                          "item": {
                            "type": "string"
                          },
                          "meta": {
                            "type": "integer"
                          }
                        },
                        "required": ["type", "item"]
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "const": "ore"
                          },
                          "ore": {
                            "type": "string"
                          }
                        },
                        "required": ["type", "ore"]
                      }
                    ]
                  }
                }
              },
              "required": ["type", "value"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "max_level"
                },
                "value": {
                  "type": "integer"
                }
              },
              "required": ["type", "value"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "unlimited_emboss"
                },
                "value": {
                  "type": "boolean"
                }
              },
              "required": ["type", "value"]
            },
            {
              "type": "object",
              "properties": {
                "type": {
                  "const": "mod_slots"
                },
                "value": {
                  "oneOf": [
                    {
                      "type": "string",
                      "enum": ["first", "all", "none"]
                    },
                    {
                      "type": "integer"
                    }
                  ]
                }
              },
              "required": ["type", "value"]
            }
          ]
        }
      }
    },
    "required": ["modifier", "mutations"]
  }
}
